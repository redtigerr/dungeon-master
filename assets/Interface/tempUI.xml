<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd
http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="QuickSlotList">        
        <layer id="leyer_left" backgroundColor="#0000" childLayout="center">
            <panel id="panel_left" width="90px" height="100%" align="left" childLayout="vertical" >
                <effect>
                    <onStartScreen name="move" mode="in" direction="left" length="300" startDelay="200" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="left" length="300" startDelay="0" inherit="true"/>
                </effect>
                <panel id="DungeonHeart" width="100%" height="90px" childLayout="center" backgroundColor="#5553">
                    <image filename="Interface/Images/StoneWall.png" valign="center" align="center" height="100%" width="100%" >
                    </image>
                </panel>
            </panel>
        </layer>
        
        <layer id="layer_right" backgroundColor="#0000" childLayout="center">
            <panel id="panel_right" width="90px" height="100%" align="right" childLayout="vertical" >
                <effect>
                    <onStartScreen name="move" mode="in" direction="right" length="300" startDelay="200" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="right" length="300" startDelay="0" inherit="true"/>
                </effect>
                <panel id="DungeonHeart" width="100%" height="90px" childLayout="vertical" backgroundColor="#5553">
                    <image id="rightImage" filename="Interface/Images/Dirt.jpg" valign="center" align="center" height="100%" width="100%" >
                    </image>
                    <text text="Press Space" font="Interface/Fonts/Candara-15.fnt" height="-40px" width="90px" color="#000f" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>